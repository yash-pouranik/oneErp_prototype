<!DOCTYPE html>
<html>
<head>
    <title>Teacher Dashboard</title>
    <link rel="stylesheet" href="/dashboard.css">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="dashboard-container">
        <%- include('partials/sidenav-teacher') %>
        <main class="main-content">
            <header class="main-header">
                <div class="header-title">
                    <h1>Teacher Dashboard</h1>
                    <p>Welcome, <%= session.userName %>!</p>
                </div>
            </header>
            <div class="card-grid">
                <div class="dashboard-card card-full-width">
                    <h2>My Assigned Subjects</h2>
                        <% if (mySubjects.length === 0) { %>
                            <p>You have not been assigned any subjects yet.</p>
                        <% } else { %>
                            <table>
                                <thead><tr><th>Subject Name</th><th>Course</th><th>Year</th></tr></thead>
                                <tbody>
                                    <% mySubjects.forEach(subject => { %>
                                    <tr>
                                        <td><%= subject.name %></td>
                                        <td><%= subject.course.name %></td>
                                        <td><%= subject.year %></td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } %>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link rel="stylesheet" href="/dashboard.css">
    <link rel="stylesheet" href="/style.css"> 
</head>
<body>
    <div class="dashboard-container">
        <%- include('partials/sidenav') %>
        <main class="main-content">
            <header class="main-header">
                <div class="header-title">
                    <h1>Analytics Dashboard</h1>
                    <p>Welcome, <%= session.instituteName %>!</p>
                </div>
            </header>
            <div class="card-grid">
                <div class="stat-card">
                    <h4>Total Students</h4>
                    <p class="stat-number"><%= totalStudents %></p>
                </div>
                <div class="stat-card">
                    <h4>Fees Paid</h4>
                    <p class="stat-number"><%= feesPaidCount %> / <%= totalStudents %></p>
                    <p class="stat-change text-success"><%= Math.round((feesPaidCount / (totalStudents || 1)) * 100) %>% complete</p>
                </div>
                <div class="stat-card">
                    <h4>Active Students</h4>
                    <p class="stat-number"><%= totalStudents %></p> <p class="stat-change text-success">All Active</p>
                </div>
                <div class="stat-card">
                    <h4>Courses</h4>
                    <p class="stat-number"><%= studentsByCourse.length %></p>
                    <p class="stat-change text-success">Total Branches</p>
                </div>
                
                <div class="dashboard-card card-full-width">
                    <h2>Students by Branch</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Branch / Course</th>
                                <th>Number of Students</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% studentsByCourse.forEach(course => { %>
                                <tr>
                                    <td><%= course._id %></td>
                                    <td><%= course.count %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="dashboard-card card-full-width">
                    <h2>Students by Session</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Session / Year</th>
                                <th>Number of Students</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% studentsBySession.forEach(session => { %>
                                <tr>
                                    <td><%= session._id %></td>
                                    <td><%= session.count %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
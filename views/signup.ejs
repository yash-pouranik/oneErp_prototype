<head>
        <link rel="stylesheet" href="/style.css">
</head>

<div class="auth-wrapper">
    <div class="auth-branding">
         <div class="auth-branding-content">
            <h2>ONE-ERP</h2>
            <p>Join the next generation of campus management systems.</p>
        </div>
    </div>

    <div class="auth-form">
        <div class="form-container">
            <h1>Create Your Workspace</h1>
            <p class="subtitle">Register your institute to get started.</p>
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label>Institute Full Name</label>
                    <input type="text" name="instituteName" required>
                </div>
                <div class="form-group">
                    <label>Desired Subdomain (e.g., sgsits)</label>
                    <input type="text" name="subdomain" required>
                </div>
                 <div class="form-group">
                    <label>Your Admin Email</label>
                    <input type="email" name="email" required>
                </div>
                <div class="form-group">
                    <label>Choose a Password</label>
                    <input type="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-primary">Register Institute</button>
            </form>
             <div class="form-footer">
                <p>Already have an account? <a href="/login">Login</a></p>
            </div>
            <% if (error) { %>
                <p class="error-message"><%= error %></p>
            <% } %>
        </div>
    </div>
</div>

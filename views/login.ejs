<head>
        <link rel="stylesheet" href="/style.css">
</head>

<div class="auth-wrapper">
    <div class="auth-branding">
        <div class="auth-branding-content">
            <h2>ONE-ERP</h2>
            <p>The future of Integrated Campus Management is here.</p>
        </div>
    </div>

    <div class="auth-form">
        <div class="form-container">
            <h1>Welcome Back</h1>
            <p class="subtitle">Login to access your institute's dashboard.</p>
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <div class="input-with-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="input-icon">
                            <path d="M3 4a2 2 0 00-2 2v1.161l8.441 4.221a1.25 1.25 0 001.118 0L19 7.162V6a2 2 0 00-2-2H3z" />
                            <path d="M19 8.839l-7.77 3.885a2.75 2.75 0 01-2.46 0L1 8.839V14a2 2 0 002 2h14a2 2 0 002-2V8.839z" />
                        </svg>
                        <input type="email" id="email" name="email" placeholder="you@example.com" required> 
                    </div>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                
                <button type="submit" class="btn btn-primary">Sign In</button>
            </form>
            <div class="form-footer">
                <p>New Institute? <a href="/signup">Register here</a></p>
            </div>
            <% if (error) { %>
                <p class="error-message"><%= error %></p>
            <% } %>
        </div>
    </div>
</div>
